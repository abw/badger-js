{
  "name": "@abw/badger",
  "version": "1.2.1",
  "description": "Component based framework and utility modules",
  "type": "module",
  "main": "dist/badger.cjs.js",
  "module": "dist/badger.esm.js",
  "author": "Andy Wardley",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/badger.esm.js",
      "require": "./dist/badger.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "badger-watch": "./dist/bin/watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abw/badger-js.git"
  },
  "bugs": {
    "url": "https://github.com/abw/badger-js/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint 'src/**/*'",
    "docs:build": "esdoc",
    "docs:serve": "serve docs",
    "test": "ava --serial",
    "pretest": "pnpm run build"
  },
  "keywords": [
    "badger",
    "project",
    "framework",
    "utility"
  ],
  "devDependencies": {
    "@itsjamie/esdoc-cli": "^0.5.0",
    "@itsjamie/esdoc-core": "^0.5.0",
    "@itsjamie/esdoc-importpath-plugin": "^0.5.0",
    "@itsjamie/esdoc-inject-style-plugin": "^0.5.0",
    "@itsjamie/esdoc-standard-plugin": "^0.5.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "ava": "^5.3.1",
    "eslint": "^8.53.0",
    "rollup": "^3.29.4",
    "rollup-plugin-copy": "^3.5.0"
  },
  "dependencies": {
    "@abw/badger-codecs": "^1.0.3",
    "@abw/badger-filesystem": "^1.0.5",
    "@abw/badger-timestamp": "^1.0.4",
    "@abw/badger-utils": "^1.0.21",
    "chokidar": "^3.5.3",
    "commander": "^10.0.1",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "prompts": "^2.4.2"
  }
}
